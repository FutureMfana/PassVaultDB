CREATE DATABASE PassVault;
GO

USE PassVault;
GO

CREATE SCHEMA UserInfo;
GO

CREATE SCHEMA SiteInfo;
GO

USE PassVault;
GO

CREATE TABLE UserInfo.Users(
	UID INT IDENTITY(10000, 1) PRIMARY KEY,
	Username NVARCHAR(100) UNIQUE NOT NULL,
	EmailAddress NVARCHAR(100) UNIQUE NOT NULL,
	Password NVARCHAR(100) NOT NULL
);
GO

CREATE TABLE SiteInfo.Sites(
	SID INT IDENTITY(1, 1) PRIMARY KEY,
	SiteName NVARCHAR(100) UNIQUE NOT NULL,
	Username NVARCHAR(100),
	EmailAddress NVARCHAR(100),
	Password NVARCHAR(100) NOT NULL,
	Comments NVARCHAR(MAX) NULL,
	UID INT,
	CONSTRAINT FK_UID_Users_Sites FOREIGN KEY (UID) REFERENCES UserInfo.Users(UID)
	ON DELETE NO ACTION
	ON UPDATE CASCADE
);
GO
